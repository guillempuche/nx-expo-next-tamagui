{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"jsx": "preserve",
		"allowJs": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		// Auto added by NextJS
		"plugins": [
			{
				"name": "next"
			}
		],
		// Auto added by NextJS
		"module": "esnext"
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.js",
		"**/*.jsx",
		"../../apps/next/.next/types/**/*.ts",
		"../../dist/apps/next/.next/types/**/*.ts",
		"next-env.d.ts",
		"next.config.mjs",
		".next/types/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"jest.config.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.ts"
	]
}
