{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"vcs": {
		"clientKind": "git",
		"defaultBranch": "main",
		"enabled": true,
		"useIgnoreFile": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"semicolons": "asNeeded"
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"files": {
		"ignore": [
			".expo",
			".nx/**/*",
			".next",
			".tamagui",
			".yarn/*",
			"/coverage",
			"dist",
			"node_modules"
		],
		"ignoreUnknown": true
	}
}
